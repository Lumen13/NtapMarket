@model NtapMarket.Data.ObjectModel.ProductModel

@using (Html.BeginForm("EditProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "form-text text-muted" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "form-text text-muted " })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Count, new { @class = "form-text text-muted" })
        @Html.TextBoxFor(x => x.Count, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Count, "", new { @class = "form-text text-muted " })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Price, new { @class = "form-text text-muted" })
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Price, "", new { @class = "form-text text-muted" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.MarketingInfo, new { @class = "form-text text-muted" })
        @Html.TextAreaFor(x => x.MarketingInfo, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MarketingInfo, "", new { @class = "form-text text-muted" })
    </div>

    <div class="userImages col-4">
        @for (int i = 0; i < Model.ProductImage.Count; i++)
        {
            <div class="dbImg-@i" style="width: 400px; height: 400px;">
                <input id="@Model.Id" class="btn btn-danger" type="button" value="X" style="position:absolute; opacity:0.7" onclick="DeleteImage(@i)">
                <img id="images" style="width: 400px; height: 400px;" src="/@Model.ProductImage[i].ImageURL" />
            </div>
        }        
        <hr>
            <input class="col btn btn-light" type="file" onchange="imageUpload(this)" />        
        <br><hr>
    </div>   
}

<hr />

<div class="container">
    <div class="row">
        <div class="col align-self-start">
            <a class="btn btn-outline-info"
               href="/Product/@Model.Id/"
               role="button">
                Отмена
            </a>
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </div>
</div>